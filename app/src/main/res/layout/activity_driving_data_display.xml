<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrivingDataDisplay">

    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Full Name: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFullName"
        android:layout_marginTop="10dp"
        android:text="Date of Birth: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewLicenseNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDateOfBirth"
        android:layout_marginTop="10dp"
        android:text="License Number: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewDateOfIssue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLicenseNumber"
        android:layout_marginTop="10dp"
        android:text="Date of Issue: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDateOfIssue"
        android:layout_marginTop="10dp"
        android:text="Expiry Date: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewPermanentAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewExpiryDate"
        android:layout_marginTop="10dp"
        android:text="Permanent Address: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewVehicleRegistrationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPermanentAddress"
        android:layout_marginTop="10dp"
        android:text="Vehicle Reg. Number: "
        android:textSize="16sp" />
</RelativeLayout>
