<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/fitnessImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splashdemo"
        android:scaleType="fitCenter"
        android:contentDescription="Fitness Image"/>

    <TextView
        android:id="@+id/fitnessTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/fitnessDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness Description..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Add more views for additional details if needed -->

</LinearLayout>
